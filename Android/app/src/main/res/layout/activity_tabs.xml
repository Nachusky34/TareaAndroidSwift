<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/flContenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:backgroundTint="#FFFFFF"
        android:pointerIcon="none"
        android:scrollbarSize="4dp"
        app:tabGravity="fill"
        app:tabIconTint="@color/black"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#55B7E8"
        app:tabTextColor="#000">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_perfil"
            android:text="Perfil" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_tienda"
            android:text="Tienda" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_historial"
            android:text="Historial" />

    </com.google.android.material.tabs.TabLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    android:layout_marginBottom="40dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="60dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/borde_pc_square"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pc"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:srcCompat="@drawable/pc_prueba" />

        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#55B7E8"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_namepc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Name Product"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cantidad_carrito"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="right"
                    android:text="Cantidad:" />

                <TextView
                    android:id="@+id/tv_num_cantidad_carrito"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:text="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="-13dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0"
                android:background="#55B7E8"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_carrito1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:gravity="right"
                    android:text="Total Price:" />

                <TextView
                    android:id="@+id/tv_price_carrito2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="1.099,99$" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#55B7E8"
            android:orientation="horizontal"></LinearLayout>

        <ImageButton
            android:id="@+id/btn_papelera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#E63131"
            app:srcCompat="@drawable/icono_delete_black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
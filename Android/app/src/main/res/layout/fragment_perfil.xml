<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".fragmentos.FragmentoPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="#55B7E8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="60dp"
                app:srcCompat="@drawable/icono_perfil_blanco" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="username"
                android:textAllCaps="false"
                android:textColor="#FEF7FF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hacer_foto"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde_pc_rounded"
            android:backgroundTint="#55B7E8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_camara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icono_camara_blanco" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icono_correo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icono_email_azul" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:editable="false"
                android:fontFamily="serif"
                android:gravity="bottom|center_vertical"
                android:hint="Email"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icono_postal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icono_zipcode_azul" />

            <EditText
                android:id="@+id/et_postalCode"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:editable="true"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:hint="Postal code"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_newsletter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Newsletter subscription:" />

            <Switch
                android:id="@+id/switch_newsletter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_guardar_cambios"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde_pc_rounded"
            android:backgroundTint="#55B7E8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/icono_guardar_blanco" />

            <TextView
                android:id="@+id/tv_guardar_cambios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Save Changes"
                android:textColor="#FFF7F7"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borde_btn_cerrarsesion"
            android:backgroundTint="#E63131"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/icono_logout_blanco" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="3"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Log Out"
                android:textColor="#FFF7F7"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
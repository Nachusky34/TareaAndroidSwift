<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".fragmentos.FragmentoPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="#55B7E8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="60dp"
                app:srcCompat="@drawable/icono_perfil_blanco" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="username"
                android:textAllCaps="false"
                android:textColor="#FEF7FF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="1dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                tools:srcCompat="@drawable/icono_email" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="10"
                android:fontFamily="serif"
                android:gravity="bottom|center_vertical"
                android:hint="Email"
                android:paddingLeft="5dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#55B7E8"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_postalCode"
                android:layout_width="34dp"
                android:layout_height="30dp"
                tools:src="@drawable/icono_zip_code" />

            <TextView
                android:id="@+id/tv_postalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:hint="Postal code"
                android:paddingLeft="5dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#55B7E8"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_newsletter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Newsletter subscription:" />

            <Switch
                android:id="@+id/switch_newsletter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hacer_foto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/borde_pc_rounded"
            android:backgroundTint="#55B7E8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_camara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/icono_camara_blanco" />

            <TextView
                android:id="@+id/tv_tomarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Tomar Foto"
                android:textColor="#FFF7F7"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>